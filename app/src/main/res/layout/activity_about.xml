<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ac.alan.connectedshelters.AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/abribusconnecte2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/about"
        android:layout_alignEnd="@+id/about" />

    <TextView android:text="ConnectedShelters is an application that I&apos;ve created during my study in engineering. \nIt basically shows you all connected shelters in Paris with google maps. Each of these shelters have an usb port that allow people to charge their smartphone. Along with this, a tactical screen has been added to help people navigate themselves during waiting time. \nThose shelters have been designed by Marcel Aurel and done by the French company JCDECAUX, also the data here have been found in OpendataParis" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>
